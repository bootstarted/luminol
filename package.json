  "main": "index.js",
  "scripts": {
    "prepublish": "npm run clean && npm run build && npm run import && chmod +x ./bin/*.js",
    "clean": "./node_modules/.bin/rimraf lib ./*.js ./*.map ./*.flow action bin hub internal",
    "build": "./node_modules/.bin/babel --copy-files -s -d lib src",
    "import": "./node_modules/.bin/ncp lib .",
    "lint": "./node_modules/.bin/eslint .",
    "smoke": "./test/smoke/demo.sh",
    "flow": "./node_modules/.bin/flow check",
    "spec": "NODE_ENV=test ./node_modules/.bin/_mocha -r adana-dump -r @babel/register -r test/helpers/chai.js -R spec --recursive test/spec",
    "test": "npm run lint && npm run spec && npm run flow && npm run smoke"
  },
  "bin": {
    "webpack-udev-server": "bin/webpack-udev-server.js"
  },
  "dependencies": {
    "backo": "^1.1.0",
    "chokidar": "^2.0.0",
    "es6-error": "^4.1.1",
    "import-file": "^1.2.2",
    "memory-fs": "^0.4.1",
    "micromatch": "^3.1.9",
    "midori": "^2.0.0",
    "mime-types": "^2.1.14",
    "open": "^0.0.5",
    "openport": "0.0.4",
    "ramda": "^0.25.0",
    "redux": "^3.7.2",
    "redux-observers": "^2.0.2",
    "url-join": "^2.0.2",
    "webpack-partial": "^2.2.0",
    "ws": "^4.0.0",
    "yargs": "^10.1.2"
  },
