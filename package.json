    "ncp": "^2.0.0",
    "node-fetch": "^1.7.3",
    "renamer": "^0.6.1",
    "sinon": "^4.1.5",
    "sinon-chai": "^2.14.0",
    "stats-webpack-plugin": "^0.6.2",
    "webpack": "^4.0.0-beta.0",
    "webpack-node-externals": "^1.6.0"
  },
